generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int       @id @default(autoincrement())
  nfcUid      String    @unique @map("nfc_uid") @db.VarChar(255)
  name        String    @db.VarChar(100)
  gender      String?   @db.VarChar(10)
  dateOfBirth DateTime  @map("date_of_birth") @db.Date
  birthPlace  String?   @map("birth_place") @db.VarChar(255)
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @default(now()) @updatedAt @map("updated_at")
  fortunes    Fortune[]

  @@map("users")
}

model Fortune {
  id                   Int      @id @default(autoincrement())
  userId               Int      @map("user_id")
  fortuneDate          DateTime @map("fortune_date") @db.Date
  overallRating        Int      @map("overall_rating")
  healthFortune        String   @map("health_fortune")
  healthSuggestion     String   @map("health_suggestion")
  wealthFortune        String   @map("wealth_fortune")
  interpersonalFortune String   @map("interpersonal_fortune")
  luckyColor           String   @map("lucky_color") @db.VarChar(50)
  actionSuggestion     String   @map("action_suggestion")
  rawAiResponse        Json?    @map("raw_ai_response")
  createdAt            DateTime @default(now()) @map("created_at")
  user                 User     @relation(fields: [userId], references: [id])

  @@unique([userId, fortuneDate])
  @@index([fortuneDate])
  @@index([userId])
  @@map("fortunes")
}
